      src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
      defer
    ></script> -->
    <script src="/js/init-alpine.js"></script>

    <style>
        /* Main layout styles */
.container {
    padding: 1.5rem;
    max-width: 100%;
    margin: 0 auto;
}

/* Table container styles */
.table-wrapper {
    background-color: #1E2029;
    border-radius: 8px;
    overflow: hidden;
    margin-top: 1.5rem;
}

/* Header section styles */
.header-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.page-title {
    color: #fff;
    font-size: 1.5rem;
    font-weight: 500;
}

.add-product-button {
    background-color: #90EE90;
    color: #000;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    border: none;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s;
}

.add-product-button:hover {
    background-color: #7DCD7D;
}

/* Table styles */
.product-table {
    width: 100%;
    border-collapse: collapse;
    white-space: nowrap;
}

.product-table th {
    background-color: #1E2029;
    color: #6B7280;
    font-weight: 500;
    text-align: left;
    padding: 1rem;
    font-size: 0.875rem;
    border-bottom: 1px solid #2D3748;
}

.product-table td {
    padding: 1rem;
    color: #E5E7EB;
    border-bottom: 1px solid #2D3748;
}

/* Product image styles */
.product-image {
    width: 50px;
    height: 50px;
    border-radius: 4px;
    object-fit: cover;
}

/* Color dots styles */
.color-dots {
    display: flex;
    gap: 8px;
}

.color-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.color-dot.red {
    background-color: #EF4444;
}

.color-dot.black {
    background-color: #000000;
}

.color-dot.blue {
    background-color: #3B82F6;
}

/* Action buttons styles */
.actions {
    display: flex;
    gap: 1rem;
}

.action-button {
    background: none;
    border: none;
    color: #6B7280;
    cursor: pointer;
    padding: 0.25rem;
    transition: color 0.2s;
}

.action-button:hover {
    color: #E5E7EB;
}

/* Pagination styles */
.pagination-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: #1E2029;
    border-top: 1px solid #2D3748;
}

.pagination {
    display: flex;
    gap: 0.5rem;
    align-items: center;
}

.page-button {
    padding: 0.5rem 0.75rem;
    background: none;
    border: none;
    color: #6B7280;
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.2s;
}

.page-button:hover {
    background-color: #374151;
    color: #E5E7EB;
}

.page-button.active {
    background-color: #8B5CF6;
    color: #ffffff;
}

.showing-text {
    color: #6B7280;
    font-size: 0.875rem;
}

/* Responsive styles */
@media (max-width: 1024px) {
    .product-table {
        font-size: 0.875rem;
    }
    
    .product-table th,
    .product-table td {
        padding: 0.75rem;
    }
}

@media (max-width: 768px) {
    .container {
        padding: 1rem;
    }
    
    .table-wrapper {
        overflow-x: auto;
    }
    
    .header-section {
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
    }
    
    .product-image {
        width: 40px;
        height: 40px;
    }
    
    .pagination-wrapper {
        flex-direction: column;
        gap: 1rem;
    }
}

/* Scrollbar styles */
.table-wrapper::-webkit-scrollbar {
    height: 8px;
}

.table-wrapper::-webkit-scrollbar-track {
    background: #1E2029;
}

.table-wrapper::-webkit-scrollbar-thumb {
    background: #374151;
    border-radius: 4px;
}

.table-wrapper::-webkit-scrollbar-thumb:hover {
    background: #4B5563;
}   
    </style>
  </head>
  <body>
    <div
      class="flex h-screen bg-gray-50 dark:bg-gray-900"
      :class="{ 'overflow-hidden': isSideMenuOpen}"
    >
      <!-- Desktop sidebar -->
      <%-include('../partials/admin/sideNav.ejs')%>
      
      <div class="flex flex-col flex-1">
        <%-include('../partials/admin/adminHeader.ejs')%>
        
        <!-- Main content -->
        
        <main class="h-full overflow-y-auto">
          <div class="container px-6 mx-auto grid">
            <!-- Header -->
             <form action="">
            <div class="flex justify-between items-center my-6">
              <h2 class="text-2xl font-semibold text-gray-700 dark:text-gray-200">
                Order List
              </h2>
            
            </div>
        </form>

            <!-- Product Table -->
            <div class="w-full overflow-hidden rounded-lg shadow-xs">
              <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap">
                  <thead>
                    <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                      <th class="px-4 py-3">No</th>
                      <th class="px-4 py-3">ORDER ID</th>
                      <th class="px-4 py-3">PRODUCT CATEGORY</th>
                      <th class="px-4 py-3">AMOUNT</th>
                      <th class="px-4 py-3">ORDER DATE</th>
                      <th class="px-4 py-3">STATUS</th>
                      <th class="px-4 py-3">Order Details</th>
                      <th class="px-4 py-3">ACTIONS</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                    <% order.forEach((order,index) => { %>
                      <tr class="text-gray-700 dark:text-gray-400">
                        <td class="px-4 py-3"><%= index+1 %></td>
                        <td class="px-4 py-3"><%= order._id %></td>
                        <td class="px-4 py-3"><%= order.categoryDetails[0].name%> </td>
                                                                
                        <td class="px-4 py-3"> <%= order.finalAmount %> RS </td>
                        <td class="px-4 py-3"> <%= order.invoiceDate.toISOString().split('T')[0] %> </td>
                        <td class="px-4 py-3"><%= order.status %></td>
                        <td class="px-4 py-3">
                          <button class="btn btn-info">
                            <a href="/admin/orderDetails/<%= order._id %>">view</a>
                          </button>
                        </td>
                        <td class="px-4 py-3">
                          <% if (order.status === 'Delivered') { %>
                         <button class="btn btn-danger" disabled>
                          <a href="" >Cancel</a>
                         </button>
                         <% } else if(order.status !=='Cancelled' && order.status !=='Return Request' && order.status !=='Returned'){ %>
                          <button class="btn btn-danger">
                            <a href="/admin/cancelOrder/<%= order._id %>" >Cancel</a>
                           </button>
                           <% } else if(order.status === 'Return Request' && order.status !== 'Delivered' && order.status !=='Cancelled'){ %>
                            <span><button class="btn btn-success" id="approve" onclick="approv('<%= order._id %>')">Approv</button></span>
                            <span><button class="btn btn-danger" id="reject" onclick="reject('<%= order._id %>')">Reject</button></span>
                          <% }else if(order.status === 'Returned'){ %>
                            <span class="text-danger">Returned</span>
                            <% }else{ %>
                            <span class="text-danger">Cancelled</span>
                           <% } %>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>                  
                </table>
              </div>

              <!-- Pagination -->
              <div class="grid px-4 py-3 text-xs font-semibold tracking-wide text-gray-500 uppercase border-t dark:border-gray-700 bg-gray-50 sm:grid-cols-9 dark:text-gray-400 dark:bg-gray-800">
                <span class="flex items-center col-span-3">
                  Showing 1 of 10
                </span>
                <span class="col-span-2"></span>
                <span class="flex col-span-4 mt-2 sm:mt-auto sm:justify-end">
                  <nav aria-label="Table navigation">
                    <ul class="inline-flex items-center">
                      <ul class="pagination inline-flex items-center">
                        <% for (let i = 1; i <= totalPage; i++) { %>
                          <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                          </li>
                        <% } %>                        
                      </ul>
                    </ul>
                  </nav>
                </span>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <script>
const approv =  async(orderId)=>{
  console.log('order id',orderId);

  try {
    const response = await fetch(`/admin/approve?orderId=${orderId}`)
    console.log('response is',response)
    const data = await response.json()
    if(data.success){
      swal.fire({
        title:'Approved',
        text:data.message,
        icon:'success'
      })
    }else{
      swal.fire({
        title:'error',
        text:data.message,
        icon:'error'
      })
    }
  } catch (error) {
    swal.fire({
      title:'error',
      text:'error when approveing return request',
      icon:'error'
    })
  }
}

const reject = async (orderId)=>{
  console.log('order id',orderId);

   try {
    const response = await fetch(`/admin/reject?orderId=${orderId}`)
    const data  = await response.json()
    if(data.success){
      swal.fire({
        title:'success',
        text:data.message,
        icon:'success'
      })
    }else{
      swal.fire({
        title:'error',
        text:data.message,
        icon:'error'
      })
    }
   } catch (error) {
    swal.fire({
      title:'error',
      text:'error when rejecting return request',
      icon:'error'
    })
   }

}
    </script>
  </body>
</html>