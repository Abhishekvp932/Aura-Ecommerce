    <style>
        /* Main layout styles */
.container {
    padding: 1.5rem;
    max-width: 100%;
    margin: 0 auto;
}

/* Table container styles */
.table-wrapper {
    background-color: #1E2029;
    border-radius: 8px;
    overflow: hidden;
    margin-top: 1.5rem;
}

/* Header section styles */
.header-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.page-title {
    color: #fff;
    font-size: 1.5rem;
    font-weight: 500;
}

.add-product-button {
    background-color: #90EE90;
    color: #000;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    border: none;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s;
}

.add-product-button:hover {
    background-color: #7DCD7D;
}

/* Table styles */
.product-table {
    width: 100%;
    border-collapse: collapse;
    white-space: nowrap;
}

.product-table th {
    background-color: #1E2029;
    color: #6B7280;
    font-weight: 500;
    text-align: left;
    padding: 1rem;
    font-size: 0.875rem;
    border-bottom: 1px solid #2D3748;
}

.product-table td {
    padding: 1rem;
    color: #E5E7EB;
    border-bottom: 1px solid #2D3748;
}

/* Product image styles */
.product-image {
    width: 50px;
    height: 50px;
    border-radius: 4px;
    object-fit: cover;
}

/* Color dots styles */
.color-dots {
    display: flex;
    gap: 8px;
}

.color-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.color-dot.red {
    background-color: #EF4444;
}

.color-dot.black {
    background-color: #000000;
}

.color-dot.blue {
    background-color: #3B82F6;
}

/* Action buttons styles */
.actions {
    display: flex;
    gap: 1rem;
}

.action-button {
    background: none;
    border: none;
    color: #6B7280;
    cursor: pointer;
    padding: 0.25rem;
    transition: color 0.2s;
}

.action-button:hover {
    color: #E5E7EB;
}

/* Pagination styles */
.pagination-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: #1E2029;
    border-top: 1px solid #2D3748;
}

.pagination {
    display: flex;
    gap: 0.5rem;
    align-items: center;
}

.page-button {
    padding: 0.5rem 0.75rem;
    background: none;
    border: none;
    color: #6B7280;
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.2s;
}

.page-button:hover {
    background-color: #374151;
    color: #E5E7EB;
}

.page-button.active {
    background-color: #8B5CF6;
    color: #ffffff;
}

.showing-text {
    color: #6B7280;
    font-size: 0.875rem;
}

/* Responsive styles */
@media (max-width: 1024px) {
    .product-table {
        font-size: 0.875rem;
    }
    
    .product-table th,
    .product-table td {
        padding: 0.75rem;
    }
}

@media (max-width: 768px) {
    .container {
        padding: 1rem;
    }
    
    .table-wrapper {
        overflow-x: auto;
    }
    
    .header-section {
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
    }
    
    .product-image {
        width: 40px;
        height: 40px;
    }
    
    .pagination-wrapper {
        flex-direction: column;
        gap: 1rem;
    }
}

/* Scrollbar styles */
.table-wrapper::-webkit-scrollbar {
    height: 8px;
}

.table-wrapper::-webkit-scrollbar-track {
    background: #1E2029;
}

.table-wrapper::-webkit-scrollbar-thumb {
    background: #374151;
    border-radius: 4px;
}

.table-wrapper::-webkit-scrollbar-thumb:hover {
    background: #4B5563;
}

img{
  max-width: 100px;
  max-height: 50px;
  margin-left: 10px;
}
    </style>
  </head>
  <body>
    <div
      class="flex h-screen bg-gray-50 dark:bg-gray-900"
      :class="{ 'overflow-hidden': isSideMenuOpen}"
    >
      <!-- Desktop sidebar -->
      <%-include('../partials/admin/sideNav.ejs')%>
      
      <div class="flex flex-col flex-1">
        <%-include('../partials/admin/adminHeader.ejs')%>
        
        <!-- Main content -->
        
        <main class="h-full overflow-y-auto">
          <div class="container px-6 mx-auto grid">
            <!-- Header -->
             <form action="">
            <div class="flex justify-between items-center my-6">
              <h2 class="text-2xl font-semibold text-gray-700 dark:text-gray-200">
                Products
              </h2>
              
              <a href="/admin/addProducts"  class="px-4 py-2 text-sm font-medium leading-5 text-green-600 transition-colors duration-150 bg-green-400 border border-transparent rounded-lg active:bg-green-500 hover:bg-green-500 focus:outline-none">
                ADD PRODUCT +
              </a>
            
            </div>
        </form>

            <!-- Product Table -->
            <div class="w-full overflow-hidden rounded-lg shadow-xs">
              <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap" border="1">
                  <thead>
                    <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                      <th class="px-4 py-3">PRODUCT IMAGE</th>
                      <th class="px-4 py-3">PRODUCT NAME</th>
                      <th class="px-4 py-3">CATEGORY</th>
                      <th class="px-4 py-3">quantity</th>
                      <th class="px-4 py-3">AMOUNT</th>
                      <th class="px-4 py-3">OFFER</th>
                      <th class="px-4 py-3">LAST UPDATED</th>
                      <th class="px-4 py-3">STATUS</th>
                      <th class="px-4 py-3">ACTIONS</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">

                    <% for(let i=0;i<product.length;i++){ %>

                    <tr class="text-gray-700 dark:text-gray-400">
                      <td class="px-4 py-3 text-sm d-flex">

                       <% for(let j=0;j<product[i].productImage.length;j++){ %>
                        <img src="/<%=product[i].productImage[j]%>" alt="no pic">
                      <% } %>
                        <!-- <div class="w-12 h-12 rounded">
                          <img class="object-cover w-full h-full rounded" src="/images/choose-1.jpg" alt="Product image" />
                        </div> -->
                      </td>
                      <td class="px-4 py-3"><%=product[i].productName%></td>
                      <td class="px-4 py-3"><%=product[i].category.name%></td>
                      <td class="px-4 py-3"><%=product[i].quantity%></td>
                      <td class="px-4 py-3">₹<%=product[i].regularPrice%></td>
                      <td class="px-4 py-3">₹<%=product[i].productOffer%></td>
                      <td><%= new Date(product[i].createdAt).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                    }) %></td>
                    <td class="px-4 py-3">
                      <% if (product[i].isBlocked === true) { %>
                        <a href="/admin/productUnBlock/<%= product[i]._id %>" class="btn btn-success text-white" style="text-decoration: none; width: 100px;">UNBLOCK</a>
                      <% } else { %>
                        <a href="/admin/productBlocked/<%= product[i]._id %>"  class="btn btn-danger text-white" style="text-decoration: none; width: 80px;">BLOCK</a>
                      <% } %>
                    </td>
                    
                      <!-- <td class="px-4 py-3">
                        <div class="flex space-x-2">
                          <span class="w-3 h-3 rounded-full bg-red-500"></span>
                          <span class="w-3 h-3 rounded-full bg-black"></span>
                          <span class="w-3 h-3 rounded-full bg-blue-500"></span>
                        </div>
                      </td> -->
                      <td class="px-4 py-3">
                        <div class="flex items-center space-x-4">
                          <a href="/admin/editeProduct/<%=product[i]._id%>" class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-200">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                            </svg>
                          <a>
                        </div>
                      </td>
                      <td class="px-4 py-3">
                        <div class="flex items-center space-x-4">
                          <button  onclick="offerAdding('<%= product[i]._id %>')" id="addoffer" class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-200">
                            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                              <path d="M21 11.5l-8-8a2.828 2.828 0 00-4 0l-8 8a2.828 2.828 0 000 4l8 8a2.828 2.828 0 004 0l8-8a2.828 2.828 0 000-4zm-14.5 0a1.5 1.5 0 110-3 1.5 1.5 0 010 3zm9 7a1.5 1.5 0 110-3 1.5 1.5 0 010 3z"/>
                            </svg>  
                          <button>
                        </div>
                      </td>
                    </tr>
                     <%}%>
                  </tbody>
                </table>
              </div>


              <!-- Pagination -->
              <div class="grid px-4 py-3 text-xs font-semibold tracking-wide text-gray-500 uppercase border-t dark:border-gray-700 bg-gray-50 sm:grid-cols-9 dark:text-gray-400 dark:bg-gray-800">
                <span class="flex items-center col-span-3">
                  Showing 1 of 10
                </span>
                <span class="col-span-2"></span>
                <span class="flex col-span-4 mt-2 sm:mt-auto sm:justify-end">
                  <nav aria-label="Table navigation">
                    <ul class="pagination inline-flex items-center">
                      <% for (let i = 1; i <= totalPage; i++) { %>
                        <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                          <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                        </li>
                      <% } %>
                    </ul>
                  </nav>
                </span>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>



<!-- Modal -->
<div id="offerModal" class="modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">OFFER ADD</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="btnClose"></button>
      </div>
      <div class="modal-body">
       <input type="text" id="newOffer" style="width: 450px;height: 50px;color: #000;" placeholder="Add Offer">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="closeBtn">Close</button>
        <button type="button" class="btn btn-primary" id="saveBtn">Save changes</button>
      </div>
    </div>
  </div>
</div>

  <script>
    
  //   document.getElementById('addoffer').addEventListener('click', function() {
  //   var offerModal = new bootstrap.Modal(document.getElementById('offerModal'));
  //   offerModal.show();

  //     document.getElementById('closeBtn').style.display = 'none'
  // });


const offerAdding = (productId)=>{
  const offerModal = document.getElementById('offerModal')
  offerModal.style.display = 'block'
    // document.getElementById('btnClose').style.display = 'none'
   const closeModalBtn = document.getElementById('closeBtn')

    closeModalBtn.onclick =()=>{
      offerModal.style.display = 'none'
    }
    document.getElementById('saveBtn').addEventListener('click',async(e)=>{
e.preventDefault()
const offer = document.getElementById('newOffer').value;
 if(!offer){
   swal.fire({
    title:'Warning',
    text:'Please add Offer',
    icon:'warning'
   })
   return
 }

 try {

  const response = await fetch(`/admin/saveOffer?productId=${productId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ offer: offer})
      });

      const result = await response.json();

      if(result.success){
        swal.fire({
          title:"success",
          text:result.message,
          icon:'success'
        })
      window.location.href = '/admin/products'

      }else{
        swal.fire({
          title:'error',
          text:result.message,
          icon:'error'
        })
         window.location.href = '/admin/products'
      }
     

  
 } catch (error) {
  console.log(error);
  
  swal.fire({
    title:'error',
    text:'offer adding error',
    icon:'error'
  })
 }

  })
 

  }
 

 
  </script>


  </body>
</html>