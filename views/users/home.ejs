  <script>
	const addToCart = async (productId)=>{
		console.log('product id is',productId)

		try {
        const response = await fetch("/addCart", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ productId }),
          });

          const data = await response.json();

          if(data.success){
            swal.fire({
             title:'success',
             text:'product addedd successfuly',
             icon:'success'
            })
          }else{
            swal.fire({
              title:'error',
              text:data.message,
              icon:"error"
            }).then(()=>{
				if(data.redirectUrl){
					window.location.href =data.redirectUrl
				}
			})
          }

          console.log('data',data);
      } catch (error) {
        swa.fire({
          title:'error',
          text:"product adding error",
          icon:'error'
        })
      }

	}

	const addToWishlist = async (productId)=>{
		console.log('product id is',productId)
		try {
            const response = await fetch("/addToWishlist", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ productId }),
          });
          const data = await response.json()
          if(data.success){
            swal.fire({
              title:'success',
              text:data.message,
              icon:'success'
            })
          }else{
            swal.fire({
              title:'error',
              text:data.message,
              icon:'error'
            }).then(()=>{
				if(data.redirectUrl){
				window.location.href = data.redirectUrl
				}
			})
          }
           } catch (error) {
            console.log('product adding to wishlist error',error)
            swal.fire({
              title:'error',
              text:'product adding to wishlist error',
              icon:'error'
            })
           }
	}
