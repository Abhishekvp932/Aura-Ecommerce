          <!-- Transaction History -->
          <div class="col-12">
            <div class="card shadow-sm">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <h4 class="card-title mb-0">Transaction History</h4>
                  <!-- <select class="form-select" style="width: auto;">
                    <option>Last 7 days</option>
                    <option>Last 30 days</option>
                    <option>Last 90 days</option>
                  </select> -->
                </div>
                
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Date</th>
                        <th>Order id</th>
                        <th>Amount</th>
                        <th>transactions</th>
                        <th>OrderStatus</th>
                      </tr>
                    </thead>
                    <tbody>
                   
                 <% for(let i=0;i<wallet.walletData.length;i++) {%>
                      <tr>
                        <td><%= new Date(wallet.walletData[i].createdOn).toLocaleDateString('en-US', { 
                          year: 'numeric', 
                          month: 'long', 
                          day: 'numeric' 
                      }) %></td>
                        <td><%= wallet.walletData[i].orderId%></td>
                        <td class="text-danger">₹<%= wallet.walletData[i].price %></td>
                        <% if(wallet.walletData[i].status === 'Credit') {%>
                        <td><span class="badge bg-success" style="color: white;">Credit</span></td>
                        <% }else{ %>
                          <td><span class="badge bg-danger" style="color: white;">Debit</span></td>
                          <% } %>
                        <td><span class="badge bg-danger" style="color: white;"><%= wallet.walletData[i].orderStatus %></span></td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
                
                <nav aria-label="Transaction history navigation">
                  <ul class="pagination inline-flex items-center">
                    <% if (totalPage > 1) { %>
                      <ul class="pagination">
                        
                        <!-- Previous Button -->
                        <li class="page-item <%= (currentPage === 1) ? 'disabled' : '' %>">
                          <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                        </li>
                    
                        <!-- Page Numbers -->
                        <% for (let i = 1; i <= totalPage; i++) { %>
                          <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                          </li>
                        <% } %>  
                    
                     
                        <li class="page-item <%= (currentPage === totalPage) ? 'disabled' : '' %>">
                          <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                        </li>
                        
                      </ul>
                    <% } %>
                                         
                  </ul>
                </nav>
              </div>
            </div>
