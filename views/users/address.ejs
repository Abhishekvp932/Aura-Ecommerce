}

.settings-nav a:hover {
    background-color: #f1f1f1;
    color: #82ae46;
    transform: translateX(5px);
}

.settings-nav i {
    margin-right: 15px;
    font-size: 18px;
    width: 24px;
    text-align: center;
}

