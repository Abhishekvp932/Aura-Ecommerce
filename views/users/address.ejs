    align-items: center;
    gap: 8px;
    background-color: #82ae46;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    margin-top: 20px;
}

.add-address-btn:hover {
    background-color: #6a9139;
}

.add-address-btn i {
    font-size: 18px;
}

@media (max-width: 768px) {
    .address-card {
        flex-direction: column;
        gap: 10px;
    }

    .delete-address-btn {
