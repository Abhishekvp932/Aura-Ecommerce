                                                <label for="street">Street Address</label>
                                                <input type="text" id="street" name="addressType" class="form-control" placeholder="House number and street name" value="<%=findAddress.address.addressType%>">
                                            </div>
                        
                                            <div class="form-group">
                                                <label for="apartment">Apartment (optional)</label>
                                                <input type="text" id="apartment" name="landMark" class="form-control" placeholder="Apartment, suite, unit etc." value="<%=findAddress.address.landMark%>">
