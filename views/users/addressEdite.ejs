                                    <h2 class="section-title">EDIT ADDRESS</h2>
                                    <form action="/editAddress/<%= findAddress._id%>" method="post">
                                        <div class="form-grid">
                                            <div class="form-group">
                                                <label for="name">Name</label>
                                                <input type="text" id="name" name="name" class="form-control" value="<%=findAddress.address.name%>">
                                            </div>
                        
                                            <div class="form-group">
                                                <label for="state">State</label>
