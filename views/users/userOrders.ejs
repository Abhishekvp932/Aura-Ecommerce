    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-12 ftco-animate">
                    <div class="row">
                        <!-- Side Navigation -->
                      <%-include('../partials/user/sideNav.ejs')%>
                        <!-- Main Content -->

                        <div class="col-md-9" >
                            <div class="form-section">
                                <h2 class="section-title">MY ORDERS</h2>
                                <div class="orders-container">
                                  <% if (order && order.length > 0) { %>
                                      <% order.forEach(orders => { %>
                                          <div class="order-card">
                                              <div class="order-header">
                                                  <div class="order-date">
                                                      <%= new Date(orders.createdOn).toLocaleDateString('en-US', { 
                                                          year: 'numeric', 
                                                          month: 'long', 
                                                          day: 'numeric' 
                                                      }) %>
                                                  </div>
                                                  <div class="order-id">Order #<%= orders._id.toString().slice(-8) %></div>
                                              </div>
                                              
                                              <div class="order-content">
                                                  <div class="order-info">
                                                      <div class="info-group">
                                                          <span class="info-label">Total Amount</span>
                                                          <span class="info-value">₹<%= orders.finalAmount %></span>
                                                      </div>
                                                      
                                                      <div class="info-group">
                                                          <span class="info-label">Status</span>
                                                          <span class="order-status <%= 
                                                              orders.status === 'Delivered' ? 'status-delivered' : 
                                                              orders.status === 'Shipped' ? 'status-shipped' : 
                                                              'status-pending' 
                                                          %>">
                                                              <%= orders.status %>
                                                          </span>
                                                      </div>
                              
                                                      <div class="info-group">
                                                          <span class="info-label">Item</span>
                                                          <span class="info-value"><%= orders.orderedItems.length %> products</span>
                                                      </div>
                                                  </div>
                              
                                                  <div class="order-products">
                                                      <% orders.orderedItems.forEach((item, index) => { %>
                                                          <div class="product-thumbnail">
                                                              <img src="<%= item.product.productImage[0] %>" alt="Product">
                                                              <% if (item.quantity > 1) { %>
                                                                  <span class="product-count">×<%= item.quantity %></span>
                                                              <% } %>
                                                          </div>
                                                      <% }) %>
                                                  </div>
                              
                                                  <div class="order-actions">
                                                      <a href="/orderSummary/<%= orders._id%>" class="btn btn-info">
                                                          View Details <i class="bi bi-arrow-right"></i>
                                                      </a>
                                                  </div>
                                              </div>
                                          </div>
                                      <% }) %>
                                  <% } else { %>
                                      <div class="order-card">
                                          <div class="order-content">
                                              <p class="text-center py-4">No orders found.</p>
                                          </div>
                                      </div>
                                  <% } %>
                              </div>

                            </div>
                        </div>


                    </div>
