                        <!-- Main Content -->

                        <div class="col-md-9" >
                            <div class="form-section">
                                <h2 class="section-title">MY ORDERS</h2>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class="thead-light">
                                            <tr>
                                              <th class="w-40">Order Id</th>
                                                <th class="w-40">Price</th>
                                                <th class="w-25">Order Date</th>
                                                <th class="w-25">Status</th>
                                                <th class="w-25">Products</th>
                                                <th class="w-25">Details</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                          <% if (order && order.length > 0) { %>
                                            <% order.forEach(orders => { %>
                                                <tr>
                                                    <td><%= orders.orderId %></td>
                                                    <td><%= orders.finalAmount %></td>
                                                    <td><%= new Date(orders.createdOn).toLocaleDateString('en-US', { 
                                                          year: 'numeric', 
                                                          month: 'long', 
                                                          day: 'numeric' 
                                                      }) %></td>
                                                    <td>
                                                      <% if(orders.status==='Delivered') { %>
                                                        <span class="badge badge-success"><%= orders.status %></span>
                                                        <% } else if(orders.status === 'Shipped') { %>
                                                          <span class="badge badge-warning"><%= orders.status %></span>
                                                          <% }else{ %>
                                                            <span class="badge badge-danger"><%= orders.status %></span>
                                                            <% } %>

                                                    </td>
                                                    <td>
                                                        <div class="order-product-images">
                                                            <% for (let i = 0; i < orders.orderedItems.length; i++) { %>
                                                                <img src="<%= orders.orderedItems[i].product.productImage[0] %>" alt="Product" class="img-fluid" style="width: 70px; height: 70px; object-fit: cover; margin-left: 20px;">
                                                            <% } %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-sm" style="background-color: #82ae46; color: white;">
                                                            <a href="/orderSummary/<%= orders._id%>"><i class="bi bi-arrow-right"></i></a>
                                                        </button>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="7">No orders found.</td>
                                            </tr>
                                        <% } %>                                                                             
                                            <!-- You can duplicate this tr for more orders -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>


