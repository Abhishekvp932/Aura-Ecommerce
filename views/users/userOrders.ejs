        .settings-nav {
    background: #f8f9fa;
    padding: 25px;
    border-radius: 8px;
    position: sticky;
    top: 20px;
}

.settings-nav h4 {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 25px;
    color: #000;
    padding-left: 10px;
}

.settings-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.settings-nav li {
    margin-bottom: 15px;
}

.settings-nav a {
    color: #333;
    text-decoration: none;
    display: flex;
    align-items: center;
    padding: 10px;
    border-radius: 5px;
