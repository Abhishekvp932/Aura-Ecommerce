    				<div class="row">
          <% for (let i = 0; i < product.length; i++) { %>
            <div class="col-sm-12 col-md-6 col-lg-4 ftco-animate d-flex">
              <div class="product d-flex flex-column">
                <a href="/product-details/<%=product[i]._id %>" class="img-prod">
                  <img
            class="img-fluid"
            src="/uploads/<%= product[i].productImage[0] %>"
            alt="<%= product[i].productName %>"
                />
                  <div class="overlay"></div>
                </a>
                <div class="text py-3 pb-4 px-3">
                  <div class="d-flex">
                    <div class="cat">
                      <span></span>
                    </div>
                    <div class="rating">
                      <p class="text-right mb-0">
                        <% for (let i = 0; i < 5; i++) { %>
                          <i class="bi <%= i <= product.rating ? 'bi-star-fill' : 'bi-star' %> text-warning"></i>
                        <% } %>
                      </p>
                    </div>
                  </div>
                  <h3><a href="#"><%= product[i].productName %></a></h3>
                  <div class="pricing">
                    <% if (product[i].quantity > 0) { %>
                      <% 
                        const productOffer = offer.find(o => o.category.toString() === product[i].category._id.toString());
                      %>
                
                      <% if (productOffer && product[i].regularPrice > productOffer.minPrice && product[i].regularPrice < productOffer.maxPrice) { %>
                        <p class="price">
                          <span><del>Price: ₹<%= product[i].regularPrice %></del></span>
                          <span style="color: red;">
                            Offer: ₹<%= product[i].regularPrice - ((product[i].regularPrice * productOffer.offer) / 100) - product[i].productOffer %>
                          </span>
                        </p>
                      <% } else if (product[i].productOffer) { %>
                        <p class="price">
                          <span><del>Price: ₹<%= product[i].regularPrice %></del></span>
                          <span style="color: red;">
                            Offer: ₹<%= product[i].regularPrice - product[i].productOffer %>
                          </span>
                        </p>
                      <% } else { %>
                        <p class="price"><span>Price: ₹<%= product[i].regularPrice %></span></p>
                      <% } %>
                    <% } else { %>
                      <span class="badge badge-danger">Out of stock</span>
                    <% } %>
                  </div>
                  <p class="bottom-area d-flex px-3">
                    <a href="#" class="add-to-cart text-center py-2 mr-1" onclick="addToCart('<%= product[i]._id %>')">
                      <span>Add to cart <i class="ion-ios-add ml-1"></i></span>
                    </a>
                    <a href="#" class="buy-now text-center py-2" onclick="addToWishlist('<%= product[i]._id %>')">
                      Wishlist <span><i class="ion-ios-cart ml-1"></i></span>
                    </a>
                  </p>
                </div>                
              </div>
            </div>
          <% } %>
