    <style>
      .breadcrumb-wrap {
            background: var(--light-gray);
            padding: 15px 0;
            margin-bottom: 50px;
        }

        .breadcrumb {
            margin: 0;
            padding: 0;
            font-size: 14px;
        }

        .breadcrumb a {
            color: var(--primary-color);
            text-decoration: none;
        }

        .breadcrumb span {
            margin: 0 10px;
            color: #151414;
        }
        
        .search-wrapper {
            position: relative;
            max-width: 500px;
            margin: 0 auto;
        }
        .search-input-group {
            display: flex;
            border: 2px solid #6c757d;
            border-radius: 50px;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        .search-input {
            flex-grow: 1;
            border: none;
            padding: 12px 15px;
            padding-left: 40px;
            font-size: 16px;
        }
        .search-input:focus {
            outline: none;
            box-shadow: 0 0 10px rgba(0,123,255,0.1);
        }
        .search-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            pointer-events: none;
        }
        .search-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 0 50px 50px 0;
            transition: background-color 0.3s ease;
        }
        .search-btn:hover {
            background-color: #0056b3;
        }
        .search-input-group:focus-within {
            border-color: #007bff;
        }
        .search-input-group:focus-within .search-icon {
            color: #007bff;
        }
    
    </style>
