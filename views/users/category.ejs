                            <option value="8000" <%= priceTo === '8000' ? 'selected' : '' %>>₹8000</option>
                            <option value="10000" <%= priceTo === '10000' ? 'selected' : '' %>>₹10000</option>
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Preserve sort option when filtering by price -->
                  <% if (sortOption) { %>
                    <input type="hidden" name="sort" value="<%= sortOption %>">
                  <% } %>
                </form>
                
                <div class="sorting-dropdown">
                  <form method="get" action="/category/<%= category[0]._id %>">
